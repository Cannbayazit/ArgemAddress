@inherits LayoutComponentBase
<style>
    main {
        background: rgba(255, 255, 255, 0.78);
        border-top-right-radius: 16px;
        backdrop-filter: blur(10.9px);
        -webkit-backdrop-filter: blur(10.9px);
    }

    .p-20 {
        padding-top: 120px;
    }
</style>
<div class="container py-5">
    <div class="row g-0">
        <div class="@(Minimize? "col-1" : "col-3")">
            <NavBarComponent minified="MinifiedEvent"></NavBarComponent>
        </div>
        <div class="@(Minimize? "col-11" : "col-9") position-relative">
            <HeaderComponent></HeaderComponent>
            <main class="w-100 h-100 p-20">
                @Body
            </main>
        </div>
    </div>
</div>

@code {
    public bool Minimize { get; set; }
    public void MinifiedEvent(bool minified)
    {
        Minimize = minified;
    }
}
